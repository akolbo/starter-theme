{% block html_head_container %}

{% include 'head.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<div class="enclosure skip">
			<div class="container">
				<div class="panel">					
					<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
				</div>
			</div>					
		</div>

		<header class="enclosure header-global" role="banner">
			{% block header %}
				<div class="container">
					<div class="panel">
											
						<!-- nav -->
						{% include "menu.twig" with {'menu': menu.get_items} %}
						<!--/nav -->
						
					</div>
				</div>
			{% endblock %}			
		</header>
		
		{# This is the main content. When the "skip-content" button is clicked on assistive technology devices, they will jump to the #content section right here #}
		<main id="content" tabindex="-1" role="main">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<!-- <div class="{{sidebar_class}}"> -->
				{% block content %}
					Sorry, no content					
				{% endblock %}
			<!-- </div> -->
			{% if sidebar %}
				<aside class="">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer class="footer-global">
				{% include 'footer-global.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
